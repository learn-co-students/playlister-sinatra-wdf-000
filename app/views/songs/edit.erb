<h1>Update Song</h1>

<h3>Song Name: <%= @song.name %></h3>
<h3>Artist Name: <%= @song.artist.name %></h3>

<form action="/songs/<%= @song.slug %>" method="POST">

  <label for="artist">Update song artist:</label>
  <input id="Artist Name" type="text" name="song[artist]">
 
  <br></br>
  <label>Update song genres</label>
 
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
  <% end %>
 
  <br></br>

  <input type="submit" value="Save">
</form>