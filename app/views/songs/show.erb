<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h2>Song Name: <%= @song.name %></h2>
<h2>Artist: <a href="/artists/<%= @song.artist.slug %>"> <%= @song.artist.name %> </a></h2>
<h2>Genre: </h2>
  <ul>
    <% @song.genres.each do |genre| %>
      <h3><li><a href="/genres/<%= genre.slug %>"><%= genre.name %> </a></li></h3>
      <br>
    <%end %>
  </ul>
