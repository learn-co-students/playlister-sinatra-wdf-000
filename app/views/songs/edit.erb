<h2>Update Song: <%= @song.name %></h2>
<form action="/songs/<%= @song.slug %>" method="post">

  <input type="text" name="song[name]" value="<%= @song.name %>" id="name" placeholder="Song Name">
  <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="artist_name" id="artist_name" placeholder="Artist Name">
  <br><br>
  <% Genre.all.each do |genre| %>
    <%= genre.name %>
    <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%='checked' if @song.genres.include?(genre) %>>
    </input>
  <% end %>
  <br><br>
  <input type="submit" value="Save">
</form>
