<h1><%=@artist.name%></h1>

<%@artist.songs.each do |song|%>
  <h4>Songs: <a href = "/songs/<%=song.slug%>"><%=song.name%></a></h4>
<%end%>

<h4>Genres: <%genre_ids = @artist.songs.collect {|song| song.genre_ids}%>
<%genre_ids.flatten.uniq.each do |id|%>
  <%genre = Genre.find(id)%>
  <p><a href = "/genres/<%=genre.slug%>"><%=genre.name%></a></p>
<%end%></h4>
