<h1>Edit a song</h1>


<form action="/songs/<%=@song.slug%>" method="POST">
  <label> Name </label><input type="text" name="song[name]" value="<%=@song.name%>">
  <br>
  <label> Artist Name </label> <input type="text" name="Artist Name" id="Artist Name">
  <br>
  <label> Genres </label>
  <br>
  <% Genre.all.each do |genre| %>

      <input type="checkbox" name="song[genres]" value="<%=genre.id%>" id="<%=genre.name%>"> <%='checked' if @song.genres.include?(genre)%><%=genre.name%></input>
      <% end %>
      <br>

  <input type="submit" value="Save">

</form>