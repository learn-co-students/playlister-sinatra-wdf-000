<h1>Edit a Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">

 <label>Artist Name</label>
 <input type="text" name="artist_name" id="Artist Name"></br>

 <label> Genres </label>
 <% Genre.all.each do |genre| %>
 <%if @song.genres.include?(genre)%>
   <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" checked>
  <% else %>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <% end %>
 <% end %>

 <input type="submit" value="Save">
</form>
