<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1><%=@song.name%></h1>

<h4>Artist: <a href = "/artists/<%=@song.artist.slug%>"><%=@song.artist.name%></a></h4>
<h4>Genres: <%genres = @song.genre_ids.collect {|id| Genre.find(id)}%>
<% genres.each do |genre|%>
<p><a href = "/genres/<%=genre.slug%>"><%=genre.name%></a></p>
<%end%></h4>

<form method="GET" action = "/songs/<%=@song.slug%>/edit">
  <input type = "submit" value = "Edit">
</form>
