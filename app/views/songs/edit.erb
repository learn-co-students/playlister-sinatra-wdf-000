<h1>Add a New Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label> Artist Name </label>
  <input type="text" name="artist_name" id="Artist Name" value="<%=@song.artist.name%>"> </br>

  <label> Song Name </label>
  <input type="text" name="Name" value="<%=@song.name%>"> </br>

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>" <%= "checked" if @song.genres %>>
  <% end %>

  <input type="submit" value="Save">
</form>
