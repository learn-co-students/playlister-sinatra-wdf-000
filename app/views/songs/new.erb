<h1>Make A New Song!</h1>
<form action="/songs" method="post">
	<label for="Name">Song Name: </label>
	<input type="text" name="song[name]" id="Name">
	<br></br>
	<label for="Artist Name">Artist Name: </label>
	<input type="text" name="artist[name]" id="Artist Name">
	<br></br>
	<label>Choose genre(s):</label>
	<% Genre.all.each do |genre| %>
		<input type="checkbox" name="genres[]" value="<%= genre.id %>" id="<%= genre.name %>"><%= genre.name %></input>
	<% end %>
	<input type="submit" id="Create">
</form>