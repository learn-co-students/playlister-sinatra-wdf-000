<h1>Edit Song:</h1>

<form action="/songs/<%=@song.slug%>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label>Name:</label>
  <input type="text" name="song[name]" id="name" value="<%=@song.name%>">
  <br></br>

  <label>Genre:</label>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%=genre.id%>" <%='checked' if @song.genres.include?(genre) %>><%=genre.name%></input>
  <%end%>
  <br></br>
  <label>Artist Name:</label>
  <input type="text" name="artist" id="Artist Name" value="<%=@song.artist.name%>">
  <br></br>
  <input type="submit" value="Save">

</form>
