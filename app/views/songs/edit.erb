
<form action="/songs/<%=@song.slug%>" method="post">

  <label>Name:</label>
  <input type="text" name="song[name]" value="<%=@song.name%>">

  <br>
  <label>Select Genres:</label>
  <br>
  <%Genre.all.each do |genre|%>
    <input type="checkbox" name="genres[]" value="<%=genre.id%>" id="<%=genre.id%>" <%='checked' if @song.genres.include?(genre)%>><%=genre.name%></input>
  <%end%>
  <br>
  <label>Artist Name:</label>
  <input type="text" name="artist_name">

  <br>
  <input type="submit"value="Save">

</form>
