<h1 class="text-center"><%= @genre.name.capitalize %> Genre Page</h1>
<hr>
<h3>Artists in this Genre</h3>
<ol>
  <% @genre_artists.each do |artist| %>
  <li>
    <a href="/artists/<%= artist.slug %>"><%= artist.name %></a>
  </li>
  <% end %>
</ol>
<h3>Songs in this Genre</h3>
<ul>
  <% @genre_songs.each do |song| %>
  <li>
    <a href="/songs/<%= song.slug %>"><%= song.name %></a>
  </li>
  <% end %>
</ul>
