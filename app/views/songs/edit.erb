<h1>Edit <%=@song.name%></h1>

<form method="POST" action="/songs/<%=@song.slug%>">
<input type="hidden" name="_method" value="PATCH">

<label for="artist_name">Artist Name</label>
<input type="text" name="artist[name]" id="artist_name" value="<%=@song.artist.name%>"><br></br>

<label for="song_name">Name</label>
<input type="text" name="song[name]" value="<%=@song.name%>" id="song_name"><br></br>

<label>Genres:</label><br>
<%Genre.all.each do |genre|%>
<input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>" <%='checked' if @song.genres.include? genre%>><%=genre.name%><br><br>
<%end%>


<input type="submit" value="Save">  
</form>